#!/bin/bash

if [ $# -ne 2 ]; then
	echo "Usage: `basename $0` dirs files"
	exit 0
fi

dirs=$1
files=$2

temp=$files.tmp
systype=`uname -s`

rm -f $temp

cat $dirs | while read dir; do
	[ -z "$dir" ] && continue
	[ -z "`echo $dir | grep ^#`" ] || continue
	
	echo "==> $dir"
	if [ $systype = Linux ] || [ `expr substr $systype 1 6` = CYGWIN ]; then
		find "$dir" -regex ".*\.\(h\|c\|cc\|cpp\|java\)" -type f 2>/dev/null >> $temp
	elif [ $systype = Darwin ]; then
		find -E "$dir" -regex ".*\.(h|c|cc|cpp|java)" -type f 2>/dev/null >> $temp
	fi
done

if [ -f $temp ]; then
	cat $temp | sed -e 's/^\.\///' > $files
	rm -f $temp
fi

